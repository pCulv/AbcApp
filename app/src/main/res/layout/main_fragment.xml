<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main" android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent" tools:context=".ui.main.MainFragment">

    <androidx.cardview.widget.CardView
            android:id="@+id/abc_card"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="16dp">

        <TextView
                android:id="@+id/a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="A B C"
                android:textSize="100sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_below="@+id/abc_card" android:textAlignment="center"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/number_card"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:clickable="true"
            android:focusable="true"
            android:visibility="visible">

        <TextView
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:text="1 2 3"
                android:textSize="100sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:textAlignment="center"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/shapes_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" tools:layout_conversion_absoluteHeight="0dp"
            tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="0dp"
            tools:layout_conversion_absoluteWidth="0dp" android:visibility="gone">

        <TextView
                android:id="@+id/shapes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Shapes"
                android:textSize="50sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" tools:layout_conversion_absoluteHeight="0dp"
                tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="0dp"
                tools:layout_conversion_absoluteWidth="0dp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/colors_card"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:visibility="visible">
        <TextView
                android:id="@+id/colors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/finger_paint"
                android:text="Colors"
                android:layout_gravity="center_vertical"
                android:textSize="75sp"
                android:textStyle="bold"
                 android:textAlignment="center"/>
    </androidx.cardview.widget.CardView>


</LinearLayout>
